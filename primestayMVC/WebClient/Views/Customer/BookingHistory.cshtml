
@model (IEnumerable<Models.Booking> bookings, Customer customer);

<div class="container">
    <h4 class="m-t-sm">@Model.customer.Name</h4>
    <p class="m-b-sm">@Model.customer.Email</p>
    <h1>BookingHistory</h1>



    <table class="table">
        <thead>
            <tr>
                <th>
                    Start Date
                </th>
                <th>
                    End Date
                </th>
                <th>
                    Guests
                </th>
                <th>
                    RoomType
                </th>
                <th>
                    Customer Id
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.bookings)
            {   
               
            <tr>
            
                <td>
                    @item.StartDate.Value.ToShortDateString()
                </td>
                <td>
                    @item.EndDate.Value.ToShortDateString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Guests)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomTypeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerId)
                </td>
                <td>
                 
                <td>
                    <a asp-controller="Booking" asp-action="Details" asp-route-bookingHref="@item.Href">
                        <input class="btn btn-primary " type="button" name="Details" value="Details" style="width:150px;" />
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>

</div>