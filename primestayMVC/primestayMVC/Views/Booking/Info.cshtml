    <div class=" order-md-1">
        <h4 class="mb-3">Billing address</h4>
        <form asp-action="Create">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Customer.Name">Name</label>
                    <input asp-for="Customer.Name" class="form-control">
                    <span asp-validation-for="Customer.Name" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Customer.Email" for="email">Email <span class="text-muted">(Optional)</span></label>
                <input asp-for="Customer.Email" type="email" class="form-control" id="email" placeholder="you@example.com">
                <span asp-validation-for="Customer.Email" class="text-danger"></span>
                <div class="invalid-feedback">
                    Please enter a valid email address for shipping updates.
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Customer.Phone">Phone</label>
                    <input asp-for="Customer.Phone" class="form-control">
                    <span asp-validation-for="Customer.Phone" class="text-danger"></span>
                </div>
            </div>



