<Window x:Class="primestayWpf.HotelCRUD.HotelForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="HotelForm" Height="400" Width="350">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="32" Margin="150,25,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="140" Name="Name"/>
        <TextBox HorizontalAlignment="Left" Height="32" Margin="150,75,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="140" Name="Description"/>
        <TextBox HorizontalAlignment="Left" Height="32" Margin="150,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" Name="StaffedHours"/>
        <TextBox HorizontalAlignment="Left" Height="32" Margin="150,225,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" Name="LocationHref"/>
        <Slider HorizontalAlignment="Left" Height="37" Margin="150,169,0,0" VerticalAlignment="Top" Width="140" Maximum="5" Minimum="0" Name="Stars"/>
        <Button Content="Ok" HorizontalAlignment="Left" Margin="250,307,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="200,307,0,0" VerticalAlignment="Top" Click="Button_Click"/>
    </Grid>
</Window>
