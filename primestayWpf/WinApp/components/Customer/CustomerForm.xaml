        <Label Content="Name:" HorizontalAlignment="Left" Margin="48,86,0,0" VerticalAlignment="Top"/>
        <Label Content="Email:" HorizontalAlignment="Left" Margin="48,136,0,0" VerticalAlignment="Top"/>
        <Label Content="phone nr.:" HorizontalAlignment="Left" Margin="29,193,0,0" VerticalAlignment="Top"/>
